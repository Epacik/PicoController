<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Width="450"
             MinWidth="450"
             MinHeight="600"
             Height="600"
             MaxHeight="600"
             MaxWidth="450"
             x:Class="PicoController.Gui.Controls.Editors.KeyboardSequenceEditor">
    <Grid
        Margin="10"
        ColumnDefinitions="*,5,80"
        RowDefinitions="*,15,30">

        <ListBox x:Name="KeysList"
                 Grid.ColumnSpan="3"
                 ScrollViewer.HorizontalScrollBarVisibility="Auto"
                 AutoScrollToSelectedItem="True"
                 VerticalAlignment="Stretch">
            
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Vertical" Spacing="5" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>
        
        <ToggleButton
            Grid.Row="2"
            Grid.Column="0"
            Content="Capture keyboard"
            x:Name="CaptureButton"
            IsTabStop="False"
            Focusable="False"/>
        
        <Button
            Grid.Row="2"
            HorizontalAlignment="Right"
            Content="Cancel"
            x:Name="CancelButton"/>

        <Button
            Grid.Row="2"
            Grid.Column="2"
            HorizontalAlignment="Stretch"
            Content="Save"
            x:Name="SaveButton"/>
    </Grid>
</UserControl>
