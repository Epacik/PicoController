<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:conv="using:PicoController.Gui.Converters"
			 xmlns:dicvm="using:PicoController.Gui.ViewModels.DisplayInfoControls"
			 mc:Ignorable="d"
			 d:DesignWidth="800"
			 d:DesignHeight="450"
			 x:Class="PicoController.Gui.Views.DisplayInfoControls.TextView"
			 x:DataType="dicvm:TextViewModel">
	<UserControl.Resources>
		<ResourceDictionary>
			<conv:BooleanToTextWrappingConverter x:Key="twConv"/>
			<conv:PicoControllerTextAlignmentConverter x:Key="alignConv"/>
		</ResourceDictionary>
	</UserControl.Resources>
	<TextBlock Text="{Binding Text}"
			   FontSize="{Binding FontSize}"
			   FontWeight="{Binding FontWeight}"
			   TextWrapping="{Binding Wrap, Converter={StaticResource twConv}}"
			   TextAlignment="{Binding Alignment, Converter={StaticResource alignConv}}">
	</TextBlock>
</UserControl>
